<body>
    <h1>Login</h1>
    <form action="/user/login" method="POST">
        
        <label>Email</label>
        <input type="text" required name="email">
        
        <label>Password</label>
        <input type="text" required name="password">
        
        <button type="submit">Login</button>
    </form>
</body>
